
if [ -z "$1" ]
then
cd src
./wmake
cd ..
f=ovideo
else
f=$1
fi

mkdir $f
cp src/ovideo.exe $f

cp -r build/img $f

mkdir $f/html
cp html/html/use.html $f/html

cp version.txt $f

mkdir $f/sys
cp build/sys/* $f/sys

mkdir $f/captures

cp soundrecorder/src/soundrecorder.exe $f
cp soundrecorder/options.txt $f

